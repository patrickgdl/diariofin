{
  "workspaces": [
    "packages/dashboard",
    "packages/site"
  ],
  "name": "fluxo-simples",
  "description": "Fluxo Simples's packages",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev:all": "concurrently \"npm run dev:dashboard\" \"npm run dev:site\"",
    "dev:dashboard": "npm run dev -w @fluxo-simples/dashboard",
    "dev:site": "npm run dev -w @fluxo-simples/site",
    "build:all": "concurrently \"npm run build:dashboard\" \"npm run build:site\"",
    "build:dashboard": "npm run build -w @fluxo-simples/dashboard",
    "build:site": "npm run build -w @fluxo-simples/site"
  },
  "devDependencies": {
    "@hookform/devtools": "^4.3.1",
    "concurrently": "^8.2.0"
  }
}
